<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="net.catten.hrsys.data">
    <class name="Staff" table="staff">
        <id name="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        <property name="name"/>
        <property name="gender">
            <!-- http://stackoverflow.com/questions/1896666/adding-an-enum-as-a-class-property-in-hbm -->
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">net.catten.hrsys.util.Gender</param>
            </type>
        </property>
        <many-to-one name="department" class="Department"/>
        <property name="commit"/>
    </class>
</hibernate-mapping>